
<body>
<h1 class="header">GYMARK</h1>
<div class="section">
    <table>
    <thead>
      <tr>
        <th><h1 style="color:white;">Articles</h1></th>
        <th><h1 style="color:white;">Comments</h1></th>
      </tr>
    </thead>
    <% @articles.each do |article| %>
    <% unless article.archived? %>
    <tbody>
      <tr>
        <td><h1 style="margin-left:20%;"><%= link_to article.title, article_path(article)%></h1></td>
        <td><h1 style="color:white; text-align:center"><%= article.comments.public_count%></h1></td>
      </tr>
    </tbody>
    <% end %>
    <% end %>
  </table>
  </div>
  <div class="new-art-link">
    <h2 style="color:white;">Our blog has <%= Article.public_count %> articles and counting!</h2>
    <h2 style="color:white;">Our blog has <%= Comment.public_count %> comments and counting!</h2>
    <%= link_to "Create a new article", new_article_path %>
  </div>
</body>